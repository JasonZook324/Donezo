<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Donezo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Donezo.Pages"
    Title="Donezo">

    <!-- Individual routes (internal tab UI will be rendered inside pages) -->
    <ShellContent
        Title="Login"
        Route="login"
        ContentTemplate="{DataTemplate pages:LoginPage}" />
    <ShellContent
        Title="Register"
        Route="register"
        ContentTemplate="{DataTemplate pages:RegisterPage}" />

    <!-- Dashboard route -->
    <ShellContent
        Title="Dashboard"
        Route="dashboard"
        ContentTemplate="{DataTemplate pages:DashboardPage}" />

    <!-- Manage Lists route -->
    <ShellContent
        Title="Manage Lists"
        Route="managelists"
        ContentTemplate="{DataTemplate pages:ManageListsPage}" />

    <!-- Share Options page (navigated to with back support) -->
    <ShellContent
        Title="Share Options"
        Route="shareoptions"
        ContentTemplate="{DataTemplate pages:ShareOptionsPage}" />

    <!-- Manage Account route -->
    <ShellContent
        Title="Manage Account"
        Route="manageaccount"
        ContentTemplate="{DataTemplate pages:ManageAccountPage}" />

</Shell>
